# =====================================
# Django Core Configuration
# =====================================
DJANGO_ENV=production
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,.onrender.com,.herokuapp.com

# =====================================
# Database Configuration
# =====================================
# PostgreSQL (Render/Heroku will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# =====================================
# Email Configuration
# =====================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# =====================================
# Payment Integration - Paystack
# =====================================
PAYSTACK_PUBLIC_KEY=pk_live_your_public_key_here
PAYSTACK_SECRET_KEY=sk_live_your_secret_key_here
PAYSTACK_WEBHOOK_SECRET=whsec_your_webhook_secret_here
PAYSTACK_CALLBACK_URL=https://yourdomain.com/payment/callback/

# =====================================
# Messaging Integration - Twilio WhatsApp
# =====================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# =====================================
# WhatsApp Configuration
# =====================================
WHATSAPP_NUMBER=2348xxxxxxxxx

# =====================================
# Site Configuration
# =====================================
SITE_URL=https://yourdomain.com

# =====================================
# Security Configuration
# =====================================
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://*.onrender.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# =====================================
# Rate Limiting Configuration
# =====================================
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW=60

# =====================================
# Deployment Configuration
# =====================================
PYTHON_VERSION=3.11.0

# =====================================
# Optional: Error Tracking (Sentry)
# =====================================
# SENTRY_DSN=https://your-sentry-dsn-here

# =====================================
# Optional: Redis Cache (Production)
# =====================================
# REDIS_URL=redis://localhost:6379/0
