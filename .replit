modules = ["python-3.12", "c-clang14", "web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cacert", "cairo", "cargo", "freetype", "glibcLocales", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pgadmin4", "pkg-config", "postgresql", "rustc", "tcl", "tk", "xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 manage.py runserver 0.0.0.0:5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37137
externalPort = 3000

[[ports]]
localPort = 37279
externalPort = 3001

[[ports]]
localPort = 38319
externalPort = 5173

[[ports]]
localPort = 38397
externalPort = 3002

[[ports]]
localPort = 41561
externalPort = 6000

[[ports]]
localPort = 41871
externalPort = 3003

[[ports]]
localPort = 42211
externalPort = 5000

[[ports]]
localPort = 44023
externalPort = 4200

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "--workers=4", "smart_invoice.wsgi:application"]
build = ["bash", "build.sh"]
